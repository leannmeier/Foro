@{
    ViewData["Title"] = "Login";
}
<div id="contenedor">
    <div id="central">
        <div id="login">
            <div class="titulo">
                    Iniciar Sesión
            </div>
            <form id="loginform" asp-action="Login">
                <input type="email" name="email" placeholder="E-mail" required>
                <input type="password" placeholder="Contraseña" name="password" required>
                <input type="submit" title="Ingresar" name="Ingresar" value="Ingresar"/>
            </form>
            @if((bool)ViewData["Error"]){
                <p class="error-message">Usuario o contraseña incorrectos</p>
            }
            <div class="pie-form">
                @*<a href="#">¿Perdiste tu contraseña?</a>*@
                ¿No tienes una cuenta?
                <a asp-controller="Miembros" asp-action="Create">Registrate</a>
            </div>
        </div>
        <div class="inferior">
            <a asp-controller="Home">Volver</a>
        </div>
    </div>
</div>